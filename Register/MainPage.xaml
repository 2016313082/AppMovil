<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Register.MainPage">

    <StackLayout>
        <Label Text="Login"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" />
        <Entry Placeholder="Usuario" x:Name="txtUsuario"/>
        <Entry Placeholder="Contraseña" x:Name="txtPass" IsPassword="True"/>
        <Button Text="Ingresar" x:Name="btnLogin" Clicked="btnLogin_Clicked"/>
        <Button Text="Registrate!" x:Name="btnRegistro" Clicked="BtnRegistro_Clicked"/>
    </StackLayout>

</ContentPage>
